<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OficinaDetailFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/id_reserva_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/id_reserva" />

        <TextView
            android:id="@+id/id_reserva_frag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_reserva_frag"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/id_reserva_frag" />

        <TextView
            android:id="@+id/data_inici_reserva_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_reserva_frag"
            android:layout_alignParentStart="@+id/id_reserva_frag"
            android:layout_alignParentLeft="@+id/id_reserva_frag"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/data_inici_reserva" />

        <TextView
            android:id="@+id/data_inici_reserva_frag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_reserva_frag_value"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="@+id/id_reserva_frag_value"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/data_final_reserva_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_inici_reserva_frag"
            android:layout_alignParentStart="@+id/data_inici_reserva_frag"
            android:layout_alignParentLeft="@+id/data_inici_reserva_frag"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/data_final_reserva" />

        <TextView
            android:id="@+id/data_final_reserva_frag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_inici_reserva_frag"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="@+id/data_inici_reserva_frag"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/id_oficina_reserva_fag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_final_reserva_frag"
            android:layout_alignParentStart="@+id/data_final_reserva_frag"
            android:layout_alignParentLeft="@+id/data_final_reserva_frag"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/id_oficina_reservada" />

        <TextView
            android:id="@+id/id_oficina_reservada_frag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_final_reserva_frag"
            android:layout_alignBottom="@+id/id_oficina_reserva_fag"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="@+id/data_final_reserva_frag"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-1dp" />

        <TextView
            android:id="@+id/id_usuari_reserva_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_oficina_reserva_fag"
            android:layout_alignParentStart="@+id/id_oficina_reserva_fag"
            android:layout_alignParentLeft="@+id/id_oficina_reserva_fag"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/id_usuari_reserva" />


        <TextView
            android:id="@+id/id_usuari_reserva_frag_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_oficina_reservada_frag_value"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="@+id/id_usuari_reserva_frag"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>